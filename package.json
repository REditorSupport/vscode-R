{
  "name": "r",
  "displayName": "R",
  "description": "Support for R language(run,syntax,snippet,lintr)",
  "version": "0.5.0",
  "author": "Yuki Ueda",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "Ikuyadeu",
  "icon": "images/Rlogo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ikuyadeu/vscode-R"
  },
  "bugs": {
    "url": "https://github.com/Ikuyadeu/vscode-R/issues"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Linters",
    "Other"
  ],
  "keywords": [
    "R",
    "R language",
    "R documentation",
    "R Markdown",
    "lintr"
  ],
  "engines": {
    "vscode": "^1.15.0"
  },
  "activationEvents": [
    "onLanguage:r",
    "workspaceContains:*.r|.rd|rmd",
    "onCommand:r.createRTerm",
    "onCommand:r.runSource",
    "onCommand:r.runSourcewithEcho",
    "onCommand:r.runSelection",
    "onCommand:r.createGitignore",
    "onCommand:r.lintr",
    "onCommand:r.installLintr"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "r",
        "extensions": [
          ".r",
          ".rhistory",
          ".rprofile",
          ".rt"
        ],
        "aliases": [
          "R",
          "r"
        ],
        "firstLine": "^#!/.*\\bRscript\\b"
      },
      {
        "id": "rd",
        "extensions": [
          ".rd"
        ],
        "aliases": [
          "R documentation",
          "r documentation"
        ],
        "configuration": "./rd-configuration.json"
      },
      {
        "id": "rmd",
        "extensions": [
          ".rmd"
        ],
        "aliases": [
          "R Markdown",
          "r markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "r",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rd",
        "path": "./snippets/r-snippets.json"
      },
      {
        "language": "rmd",
        "path": "./snippets/markdown.json"
      }
    ],
    "grammars": [
      {
        "language": "r",
        "scopeName": "source.r",
        "path": "./syntax/r.json"
      },
      {
        "language": "rd",
        "scopeName": "text.tex.latex.rd",
        "path": "./syntax/Rd (R Documentation).tmLanguage"
      },
      {
        "language": "rmd",
        "scopeName": "text.html.markdown.redcarpet",
        "path": "./syntax/Markdown Redcarpet.tmLanguage"
      }
    ],
    "commands": [
      {
        "title": "Create R terminal",
        "category": "R",
        "command": "r.createRTerm"
      },
      {
        "title": "Run Source",
        "category": "R",
        "command": "r.runSource",
        "icon": {
          "light": "./images/DownloadFile.ico",
          "dark": "./images/DownloadFile_inverse.ico"
        }
      },
      {
        "title": "Run Source with Echo",
        "category": "R",
        "command": "r.runSourcewithEcho"
      },
      {
        "title": "Run Selection/Line",
        "category": "R",
        "command": "r.runSelection"
      },
      {
        "title": "Create gitignore",
        "category": "R",
        "command": "r.createGitignore"
      },
      {
        "title": "lintr",
        "category": "R",
        "command": "r.lintr"
      },
      {
        "title": "install lintr",
        "category": "R",
        "command": "r.installLintr"
      },
      {
        "title": "Preview Dataframe",
        "category": "R",
        "command": "r.previewDataframe"
      },
      {
        "title": "Preview Environment",
        "category": "R",
        "command": "r.previewEnvironment"
      }
    ],
    "keybindings": [
      {
        "command": "r.runSelection",
        "key": "Ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == 'r'"
      },
      {
        "command": "r.runSource",
        "key": "shift+Ctrl+s",
        "mac": "shift+cmd+s",
        "when": "editorTextFocus && editorLangId == 'r'"
      },
      {
        "command": "r.runSourcewithEcho",
        "key": "shift+Ctrl+enter",
        "mac": "shift+cmd+enter",
        "when": "editorTextFocus && editorLangId == 'r'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == r",
          "command": "r.runSource",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "r",
      "properties": {
        "r.rterm.windows": {
          "type": "string",
          "default": "C:\\Program Files\\R\\R-3.3.3\\bin\\x64\\R.exe",
          "description": "R.exe path for windows"
        },
        "r.rterm.mac": {
          "type": "string",
          "default": "/usr/local/bin/R",
          "description": "R path for Mac OS X"
        },
        "r.rterm.linux": {
          "type": "string",
          "default": "/usr/bin/R",
          "description": "R path for Linux"
        },
        "r.rterm.option": {
          "type": "array",
          "default": [],
          "description": "R command line options (i.e: --vanilla)"
        },
        "r.source.encoding": {
          "type": "string",
          "default": "UTF-8",
          "description": "An optional encoding to pass to R when executing the file, i.e. 'source(FILE, encoding=ENCODING)'"
        },
        "r.source.focus": {
          "type": "string",
          "default": "editor",
          "enum": [
            "editor",
            "terminal"
          ],
          "description": "Keeping focus when running"
        },
        "r.lintr.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable lintr"
        },
        "r.lintr.linters": {
          "type": "string",
          "default": "default_linters",
          "description": "list of linter functions"
        },
        "r.lintr.cache": {
          "type": "boolean",
          "default": true,
          "description": "toggle caching of lint results"
        },
        "r.lintr.executable": {
          "type": "string",
          "default": "",
          "description": "R executable path for lintr"
        },
        "r.lintr.ispackage": {
          "type": "boolean",
          "default": false,
          "description": "If true, lintr exec lint_package() instead of lint()"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^8.0.31",
    "mocha": "^2.3.3",
    "node-atomizr": "^0.6.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.5",
    "yamljs": "^0.3.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.1",
    "path": "^0.12.7",
    "tslint": "^5.8.0",
    "winattr": "^2.0.0"
  },
  "extensionDependencies": [
    "GrapeCity.gc-excelviewer"
  ]
}
